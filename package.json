{
    "name": "StatusPpage",
    "description": "一款基于 UptimeRobot 中文状态监测页",
    "version": "0.2.3",
    "main": "build/bootstrap/app.js",
    "repository": "https://github.com/xOS/StatusPage.git",
    "author": "佩佩 <admin@nange.cn>",
    "license": "GPL-3.0",
    "scripts": {
        "start": "node build/bootstrap",
        "dev": "gulp dev",
        "build:server": "babel src -d build",
        "build": "npm run build:server && gulp",
        "clean": "rimraf build",
        "precommit": "npm run test",
        "test": "NODE_ENV=test nyc ava",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
    },
    "resolutions": {
        "graceful-fs": "^4.2.8",
        "axios": "^0.24.0",
        "glob-parent": "^6.0.2",
        "set-value": "^4.1.0",
        "ansi-regex": "^5.0.1",
        "yargs-parser": "^21.0.0",
        "qs": "^6.10.2",
        "kind-of": "^6.0.3",
        "extend": "^3.0.2",
        "superagent": "^6.1.0",
        "mime": "^2.0.3",
        "lodash.template": "^4.5.0",
        "minimatch": "^3.0.2",
        "lodash": "^4.17.21",
        "follow-redirects": "^1.14.7"
    },
    "homepage": "https://github.com/xOS/StatusPage",
    "bugs": {
        "url": "https://github.com/xOS/StatusPage/issues"
    },
    "dependencies": {
        "config": "^3.3.7",
        "cron": "^1.8.2",
        "date-fns": "^2.28.0",
        "dotenv": "^10.0.0",
        "immutable": "^4.0.0",
        "js-yaml": "^4.1.0",
        "koa": "^2.13.4",
        "koa-router": "^10.1.1",
        "koa-static-cache": "^5.1.4",
        "koa-views": "^8.0.0",
        "memory-cache": "^0.2.0",
        "pug": "^3.0.2",
        "uptimerobot-apiv2": "^0.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.17.2",
        "@babel/node": "^7.16.8",
        "@babel/preset-env": "^7.16.11",
        "autoprefixer": "^9.1.0",
        "ava": "4.0.0-rc.1",
        "browser-sync": "^2.27.7",
        "cheerio": "^1.0.0-rc.10",
        "codecov": "^3.8.3",
        "cssnano": "^5.0.16",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^5.2.0",
        "eslint-plugin-standard": "^5.0.0",
        "gulp": "^3.9.1",
        "gulp-nodemon": "^2.5.0",
        "gulp-postcss": "^9.0.1",
        "gulp-rev": "^9.0.0",
        "gulp-rev-replace": "^0.4.4",
        "gulp-uglify": "^3.0.2",
        "husky": "^7.0.4",
        "nock": "^13.2.2",
        "normalize.css": "^8.0.1",
        "nyc": "^15.1.0",
        "postcss": "^8.4.5",
        "postcss-assets": "^6.0.0",
        "postcss-custom-properties": "^9.2.0",
        "postcss-debug": "^0.4.2",
        "postcss-import": "^13.0.0",
        "postcss-nested": "^5.0.6",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "superkoa": "^1.0.3",
        "time-require": "^0.1.2"
    },
    "eslintConfig": {
        "extends": [
            "standard",
            "prettier"
        ],
        "plugins": [
            "prettier",
            "standard"
        ],
        "rules": {
            "prettier/prettier": "error"
        },
        "env": {
            "node": true,
            "es6": true
        }
    },
    "eslintIgnore": [
        "build",
        "public"
    ],
    "ava": {
        "files": [
            "test/test.js",
            "src/**/__tests__/**/*.js"
        ],
        "sources": [
            "src/**/*.js"
        ],
        "concurrency": 5,
        "failFast": true,
        "failWithoutAssertions": false,
        "tap": false,
        "powerAssert": true,
        "require": [
            "@babel/register"
        ]
    },
    "nyc": {
        "exclude": [
            "src/public/**/*",
            "src/**/*.spec.js",
            "src/lib/logger.js"
        ]
    }
}
